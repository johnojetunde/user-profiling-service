<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="oakinrele" id="2021110721-02">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="doctor_appointment"/>
            </not>
        </preConditions>

        <createTable tableName="doctor_appointment">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
            <constraints nullable="false"/>
            </column>
            <column name="doctors_time_slot_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(100)" defaultValue="system"/>
            <column name="updated_by" type="VARCHAR(100)" defaultValue="system"/>
            <column name="is_deleted" defaultValue="false" type="${boolean}">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="doctors_time_slot_id" baseTableName="doctor_appointment"
                                 constraintName="FK_doctor_appointment_doctors_time_slot_id" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id" referencedTableName="doctor_timeslot" validate="true"/>
    </changeSet>
</databaseChangeLog>
