<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="johnojetunde" id="20210100314-01">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="doctor_timeslot"/>
            </not>
        </preConditions>

        <createTable tableName="doctor_timeslot">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="start_time" type="TIME">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="end_time" type="TIME">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="status" type="VARCHAR(10)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="doctor_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="datetime" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="created_by" type="VARCHAR(100)" defaultValue="system"/>
            <column name="updated_by" type="VARCHAR(100)" defaultValue="system"/>
            <column name="is_deleted" defaultValue="false" type="${boolean}">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="doctor_id" baseTableName="doctor_timeslot"
                                 constraintName="FK_doctor_timeslot_doctor_id" deferrable="false"
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="id" referencedTableName="doctor_profile" validate="true"/>
    </changeSet>

    <changeSet author="johnojetunde" id="20210100314-02" dbms="postgresql">
        <dropUniqueConstraint schemaName="public"
                              tableName="doctor_timeslot"
                              constraintName="doctor_timeslot_status_key"
                              uniqueColumns="status"/>
        <dropUniqueConstraint schemaName="public"
                              tableName="doctor_timeslot"
                              constraintName="doctor_timeslot_end_time_key"
                              uniqueColumns="end_time"/>
        <dropUniqueConstraint schemaName="public"
                              tableName="doctor_timeslot"
                              constraintName="doctor_timeslot_start_time_key"
                              uniqueColumns="start_time"/>
        <dropUniqueConstraint schemaName="public"
                              tableName="doctor_timeslot"
                              constraintName="doctor_timeslot_date_key"
                              uniqueColumns="date"/>
    </changeSet>
    <changeSet author="johnojetunde" id="20210100314-03" dbms="mysql">
        <dropUniqueConstraint schemaName="public"
                              tableName="doctor_timeslot"
                              constraintName="status"
                              uniqueColumns="status"/>
        <dropUniqueConstraint schemaName="public"
                              tableName="doctor_timeslot"
                              constraintName="end_time"
                              uniqueColumns="end_time"/>
        <dropUniqueConstraint schemaName="public"
                              tableName="doctor_timeslot"
                              constraintName="start_time"
                              uniqueColumns="start_time"/>
        <dropUniqueConstraint schemaName="public"
                              tableName="doctor_timeslot"
                              constraintName="date"
                              uniqueColumns="date"/>
    </changeSet>
</databaseChangeLog>
